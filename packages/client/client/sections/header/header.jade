template(name="HeaderSection")
	nav(class="ui large menu navbar grid")
		a(href="{{pathFor 'index'}}", class="brand item")
			i(class="home outline icon")
			| Home
		a(href="{{pathFor 'blog'}}", class="brand item") Blog
		//- this should not use the router
		a(class="item", href="/rss") RSS

		div(class="right menu")
			div(class="item")
				div(class="ui transparent icon input")
					input(type="text", placeholder="Search...")
					i(class="search link icon")
			div(class="item")
				unless currentUser
					a(href="#", class="ui primary button", login) Sign In / Register
				else
					+avatar(user=currentUser shape="rounded" size="extra-small")
					//- a(href="#", class="ui primary button", logout) Logout