template(name="HeaderSection")
	nav(class="ui large menu navbar grid")
		a(href="{{pathFor 'index'}}", class="brand item")
			i(class="home outline icon")
			| {{_ 'home'}}
		a(href="{{pathFor 'blog'}}", class="brand item") {{_ 'blog'}}
		//- this should not use the router
		+if isInRole 'admin'
			a(class="item", href="{{pathFor 'admin.index'}}") {{_ 'admin'}}

		div(class="right menu")
			div(class="item")
				div(class="ui transparent icon input")
					input(type="text", placeholder="{{_ 'search'}}...")
					i(class="search link icon")
			div(class="item")
				unless currentUser
					a(href="#", class="ui primary button", login) {{_ 'sign_in'}} / {{_ 'register'}}
				else
					//- +avatar(user=currentUser shape="rounded" size="extra-small")
					a(href="#", class="ui primary button", logout) {{_ 'logout'}}