template(name="AdminPostsView")
  h2 Posts
  table(class="ui table")
    thead
      tr
        th
          input(type="checkbox", class="ui small checkbox checkall")
        th Title
        th Author
        th Published
        th
          i.comments.icon
        th Date
    tbody
      +each posts
        tr
          td
            input(type="checkbox", class="ui small checkbox")
          td
            a(href="{{pathFor 'admin.posts.edit' id=this._id}}") {{title}}
          td {{author}}
          td
            +if published
              i.large.green.checkmark.icon
            +else
              i.large.remove.icon
          td
            .ui.blue.label 0
          td #{date}
    tfoot
