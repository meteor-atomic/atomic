template(name="AdminPostCreateView")

  h2 New article

  .ui.stackable.grid
    .twelve.wide.column
      //- Title
      div(class="ui large fluid input")
        input(type="text", placeholder="Title..", name="title")
        .ui.corner.label
          i.asterisk.icon
      br

      //- The text area container
      .ui.segment
        div#editor
          .ui.corner.label
            i.asterisk.icon

    //- Sidebar
    .four.wide.column
      .ui.2.fluid.buttons.right
        .ui.button.cancel Cancel
        .or
        .ui.button.positive.save Save
      .ui.segment
        h4
          i.external.share.icon
          | Publication
        div(class="ui toggle checkbox")
          input(type="checkbox", name="published")
          label Published

      //- Category Picker
      +AdminCategoryPickerSegment

      //- Tags Segment
      +AdminTagsSegment
