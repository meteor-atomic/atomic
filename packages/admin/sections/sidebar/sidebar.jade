template(name="AdminSidebarSection")
  div(class="ui large sidebar visible left vertical inverted labeled menu")
    //- Dashboard
    a(class="{{classes 'admin.dashboard'}}", href="{{pathFor 'admin.dashboard'}}") Dashbaord
      i.home.icon

    //- Posts
    b(class="item") Posts
      i.pencil.icon
      .menu
        a(class="{{classes 'admin.posts'}}", href="{{pathFor 'admin.posts'}}") All Posts
        a(class="{{classes 'admin.posts.drafts'}}", href="{{pathFor 'admin.posts.drafts'}}") Drafts
        a(class="{{classes 'admin.posts.new'}}", href="{{pathFor 'admin.posts.new'}}") New
    //- Categories
    a(class="item", class="{{classes 'admin.categories'}}", href="{{pathFor 'admin.categories'}}") Categories
      i.sitemap.icon
    //- Comments
    b(class="item") Comments
      i.comments.icon
      .menu
        a(class="{{classes 'admin.comments'}}", href="{{pathFor 'admin.comments'}}") All comments
        a(class="{{classes 'admin.comments.spam'}}", href="{{pathFor 'admin.comments.spam'}}") Spam

    //- Media
    b(class="item") Media
      i.photo.icon
      .menu
        a(class="{{classes 'admin.media'}}", href="{{pathFor 'admin.media'}}") All Media
        a(class="{{classes 'admin.media.upload'}}", href="{{pathFor 'admin.media.upload'}}") Upload

    //- Settings
    b(class="item") Settings
      i.settings.icon
      .menu
        a(class="{{classes 'admin.settings.general'}}", href="{{pathFor 'admin.settings.general'}}") General
        //- a(class="{{classes 'admin.settings.media'}}", href="{{pathFor 'admin.settings.media'}}") Media
