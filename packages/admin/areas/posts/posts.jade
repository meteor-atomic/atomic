template(name="AdminPostsView")
  h2.ui.header
    i.pencil.icon
    .content Posts
  table(class="ui table")
    thead
      tr
        th
          input(type="checkbox", class="ui small checkbox checkall")
        th Title
        th Author
        th Published
        th Last Updated
    tbody
      +each posts
        tr
          td
            input(type="checkbox", class="ui small checkbox")
          td
            a(href="{{pathFor 'admin.posts.edit' id=this._id}}") {{title}}
          td {{author}}
          td
            +if published
              i.large.green.checkmark.icon
            +else
              i.large.remove.icon
          td(alt=updatedAt, title=updatedAt) #{date}
    tfoot
