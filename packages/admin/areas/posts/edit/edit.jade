template(name="AdminPostEditView")
  h2 Edit post
  .ui.stackable.grid
    .twelve.wide.column
      //- Title
      div(class="ui large fluid input")
        +with post
          input(type="text", placeholder="Title..", name="title", value="{{title}}")
          .ui.corner.label
            i.asterisk.icon
      br

      //- Custom action bar
      div.button-container
        .ui.icon.buttons
          a(class="ui button bold")
            i.bold.icon
          a(class="ui button italic")
            i.italic.icon

        .ui.icon.buttons
          a(class="ui button quote")
            i.quote.left.icon
          a(class="ui button unordered-list")
            i.unordered.list.icon
          a(class="ui button ordered-list")
            i.ordered.list.icon

        .ui.icon.buttons
          a(class="ui button link")
            i.linkify.icon
          a(class="ui button images")
            i.file.image.outline.icon

        .ui.icon.buttons
          a(class="ui button undo")
            i.undo.icon
          a(class="ui button redo")
            i.repeat.icon

        .ui.icon.buttons
          a(class="ui labeled icon button preview")
            i.external.icon
            | Preview

        .ui.icon.buttons
          a(class="ui labeled icon button fullscreen")
            i.expand.icon
            | Fullscreen

      //- The text area container
      .ui.segment
        div#editor
          .ui.corner.label
            i.asterisk.icon

    //- Sidebar
    .four.wide.column
      .ui.2.fluid.buttons
        .ui.button Cancel
        .or
        .ui.positive.button Save
      .ui.segment
        h4
          i.external.share.icon
          | Publication
        div(class="ui toggle checkbox")
          +with post
            input(type="checkbox", name="published", checked="{{published}}")
            label Published

      +with post
        //- Category Picker
        +AdminCategoryPickerSegment(id=_id)

        //- Tags Segment
        +AdminTagsSegment(id=_id)
